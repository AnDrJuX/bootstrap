<h1><%= @item.title %></h1>

<div class="container-fluid">
  <%= image_tag @item.image.url(:large), class: 'img-show' if @item.image? %></br>
</div>

<button type="button" class="btn btn-default btn-sm"><%= link_to 'Edit item', edit_item_path(@item)%></button>
<button type="button" class="btn btn-default btn-sm"><%= link_to 'Back to items', items_path(@item)%></button>
<button type="button" class="btn btn-default btn-sm"><%= link_to 'Delete item', item_path(@item), method: :delete, data: {confirm: 'Are you shure?'}%></button>
